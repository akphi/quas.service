{
  "plugins": [
    "node"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "rules": {
    "quotes": [
      "warn",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "node/no-unpublished-require": [
      "warn",
      {
        "allowModules": [
          "gulpfile"
        ]
      }
    ],
    "comma-dangle": [
      "warn",
      "never"
    ],
    "no-process-exit": 0,
    "node/exports-style": [
      "error",
      "module.exports"
    ],
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^next$"
      }
    ]
  }
}