{
  "plugins": [
    "node"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "rules": {
    "no-process-exit": 0,
    "node/exports-style": [
      "error",
      "module.exports"
    ],
    "no-unused-vars": [
      2,
      {
        "argsIgnorePattern": "^next$"
      }
    ]
  }
}